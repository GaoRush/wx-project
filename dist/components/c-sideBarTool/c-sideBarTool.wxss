/* components/c-tabBar/c-tabBar.wxss */
.c-sideBarTool_wrap {
  position: fixed;
  bottom: 15%;
  right: 30rpx;
  z-index: 9999;
  padding: 10rpx 0;
}

.c-sideBarTool_wrap .icon {
  width: 80rpx;
  height: 80rpx;
  z-index: 3;
}

.c-sideBarTool_wrap .icon_wrap {
  display: flex;
  width: 80rpx;
  height: 90rpx;
  position: relative;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.c-sideBarTool_wrap .icon_wrap .kf_btn {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: block;
  width: 100%;
  height: 100%;
  background-color: #000;
  opacity: 0;
  z-index: 4;
}
