/* components/c-tabBar/c-tabBar.wxss */
.c-tabBar_wrap {
  padding-top: 110rpx;
}

.c-tabBar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 110rpx;
  background-color: #fff;
  z-index: 9999;
  text-align: center;
  display: flex;
  align-items: center;
  box-shadow: 0 0 10rpx #c4c5c6;
}

.c-tabBar .item {
  display: inline-block;
  padding: 10rpx 0;
  width: 100%;
}

.c-tabBar .item.active .tle {
  color: #4864ff;
}

.c-tabBar .icon {
  width: 48rpx;
  height: 48rpx;
}

.c-tabBar .tle {
  display: block;
  font-size: 22rpx;
  color: #999;
}

.bottom_tabBar {
  width: 100%;
  height: 110rpx;
  background-color: #fff;
  z-index: 9999;
  text-align: center;
  display: flex;
  align-items: center;
  box-shadow: 0 0 10rpx #c4c5c6;
}

.bottom_tabBar.fixed {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
}

.bottom_tabBar .cell {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.bottom_tabBar .cell.br {
  border-right: 1px solid #ededed;
}

.bottom_tabBar .item {
  display: inline-block;
  padding: 10rpx 0;
  width: 100%;
  position: relative;
}

.bottom_tabBar .item.unRead .icon {
  position: relative;
  overflow: auto;
  padding-right: 20rpx;
  margin-right: -15rpx;
}

.bottom_tabBar .item.unRead .icon:after {
  content: '';
  position: absolute;
  right: 0;
  top: -5rpx;
  display: inline-block;
  width: 15rpx;
  height: 15rpx;
  background-color: #ffb400;
  border: 6rpx solid #fff;
  border-radius: 50%;
  z-index: 999;
}

.bottom_tabBar .item .icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 8rpx;
}

.bottom_tabBar .item .tle {
  display: block;
  font-size: 22rpx;
  color: #999;
}

.bottom_tabBar .btn {
  width: 100%;
  height: 100%;
  background-color: #fff;
  color: #4864ff;
  font-size: 30rprx;
}

.bottom_tabBar .btn.buy {
  color: #fff;
  background-color: #4864ff;
}
