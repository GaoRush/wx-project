page {
  background-color: #fff;
}

.statusBar .pt {
  display: block !important;
}

.search_box_wrap {
  display: flex;
  background-color: #4864ff;
  height: 50px;
  padding: 0 30rpx;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 99;
  align-items: flex-end;
  border-right-color: #4864ff;
  box-sizing: content-box;
}

.search_box_wrap .search_box {
  width: 100%;
  background-color: #fff;
  margin-bottom: 11px;
}

.search_box {
  background-color: #ededed;
  border-radius: 6rpx;
  overflow: hidden;
  display: flex;
  align-items: center;
  height: 35px;
}

.search_btn {
  width: 68rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: transparent;
}

.search_btn .icon {
  width: 26rpx;
  height: 26rpx;
}

.search_text {
  color: #333;
  font-size: 26rpx;
  flex: 1;
  min-width: 0;
  height: 100%;
  line-height: 1.5;
}

.search_text::-webkit-input-placeholder {
  color: #b2b2b2;
}

.category_list {
  width: 100%;
  display: flex;
  position: fixed;
  top: 64px;
  left: 0;
}

.category_list .nav_left {
  width: 225rpx;
  height: 100%;
  background-color: #f5f5f5;
}

.category_list .nav_left .item {
  font-size: 30rpx;
  color: #333;
  position: relative;
  text-align: center;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.category_list .nav_left .item.active {
  color: #4864ff;
  background-color: #fff;
}

.category_list .nav_left .item.active::after {
  content: '';
  display: inline-block;
  position: absolute;
  left: 0;
  top: 50%;
  width: 8rpx;
  height: 30rpx;
  margin-top: -15rpx;
  background-color: #4864ff;
}

.category_list .nav_right {
  background-color: #fff;
  flex: 1;
  min-width: 0;
  position: relative;
  height: 100%;
}

.category_list .nav_right .scroll {
  padding: 30rpx 20rpx;
  padding-bottom: 0;
  box-sizing: border-box;
}

.category_list .nav_right .tips {
  text-align: center;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  top: 50%;
  -webkit-transform: translateY(-50%);
  -moz-transform: translateY(-50%);
  -ms-transform: translateY(-50%);
  transform: translateY(-50%);
  margin-top: -15rpx;
}

.prd_item {
  width: 33.3%;
  margin-bottom: 30rpx;
  float: left;
  text-align: center;
  line-height: 1;
}

.prd_item .prd_img {
  width: 126rpx;
  height: 126rpx;
  border-radius: 4rpx;
  border: 1rpx solid #dbdbdb;
}

.prd_item .prd_name {
  font-size: 26rpx;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-top: 15rpx;
}

.prd_item .prd_price {
  font-size: 24rpx;
  color: #ffb400;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
