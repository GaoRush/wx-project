page {
  background-color: #fff;
}

.statusBar .pt {
  display: block !important;
}

.search_box_wrap {
  display: flex;
  background-color: #4864ff;
  height: 50px;
  padding: 0 30rpx;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 99;
  align-items: flex-end;
  border-right-color: #4864ff;
  box-sizing: content-box;
}

.search_box_wrap .search_box {
  width: 100%;
  background-color: #fff;
  margin-bottom: 11px;
}

.search_box {
  background-color: #ededed;
  border-radius: 6rpx;
  overflow: hidden;
  display: flex;
  align-items: center;
  height: 35px;
}

.search_btn {
  width: 68rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: transparent;
}

.search_btn .icon {
  width: 26rpx;
  height: 26rpx;
}

.search_text {
  color: #333;
  font-size: 26rpx;
  flex: 1;
  min-width: 0;
  height: 100%;
  line-height: 1.5;
}

.search_text::-webkit-input-placeholder {
  color: #b2b2b2;
}

.prd_list {
  width: 100%;
  padding: 30rpx 0;
  padding-bottom: 0;
}

.prd_list .prd_item {
  width: 100%;
  height: 196rpx;
  padding: 0 30rpx;
  float: none;
  position: relative;
  margin-bottom: 40rpx;
}

.prd_list .prd_item::after {
  content: '';
  display: inline-block;
  width: 67%;
  height: 0;
  position: absolute;
  right: 0;
  bottom: -20rpx;
  border-bottom: 1px solid #ededed;
}

.prd_list .prd_item:last-child {
  border-bottom: 0;
}

.prd_list .prd_item .prd_img {
  width: 196rpx;
  height: 196rpx;
  border: 1px solid #dbdbdb;
}

.prd_list .prd_item .prd_name {
  width: 100%;
  font-size: 30rpx;
  white-space: inherit;
  line-height: 1.5;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-line-clamp: 2;
  -o-text-overflow: ellipsis;
  margin-top: 0;
  color: #333;
}

.prd_list .prd_item .prd_price {
  color: #ffb400;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 100%;
  font-size: 32rpx;
  margin-top: 20rpx;
  font-weight: 600;
  display: flex;
  align-items: flex-end;
  line-height: 1;
  padding-bottom: 10rpx;
}

.prd_list .prd_item .prc_buyNum {
  width: 100%;
  font-size: 22rpx;
  color: #999;
}

.prd_list .prd_item .btn_shopCart {
  display: flex;
  margin: 20rpx 0;
}

.prd_list .prd_item .btn_shopCart .icon {
  width: 58rpx;
  height: 58rpx;
}

.prd_list .cell_hd {
  display: flex;
}

.prd_list .cell_bd {
  padding: 0 20rpx;
  height: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.prd_list .cell_ft {
  height: 100%;
  display: flex;
  align-items: flex-end;
}

.prd_list .tips {
  text-align: center;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 100rpx auto;
}
