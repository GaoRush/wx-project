page {
  background-color: #ededed;
  padding-bottom: 230rpx;
}

.shopCart_list {
  width: 100%;
  padding: 30rpx 0;
}

.shopCart_list .prd_item {
  width: 100%;
  height: auto;
  float: none;
  position: relative;
  margin-bottom: 20rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
}

.shopCart_list .prd_item:last-child {
  border-bottom: 0;
}

.shopCart_list .prd_item .prd_img {
  width: 196rpx;
  height: 196rpx;
  border: 1px solid #dbdbdb;
}

.shopCart_list .prd_item .prd_name {
  width: 100%;
  font-size: 30rpx;
  white-space: inherit;
  line-height: 1.5;
  min-height: 150rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-line-clamp: 2;
  -o-text-overflow: ellipsis;
  margin-top: 0;
  color: #333;
}

.shopCart_list .prd_item .prd_price {
  color: #ffb400;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: flex-end;
  line-height: 1;
}

.shopCart_list .prd_item .prc_buyNum {
  width: 100%;
  font-size: 22rpx;
  color: #999;
}

.shopCart_list .prd_item .btn_shopCart {
  display: flex;
  margin: 20rpx 0;
}

.shopCart_list .prd_item .btn_shopCart .icon {
  width: 58rpx;
  height: 58rpx;
}

.shopCart_list .cell_wrap {
  padding: 30rpx;
  width: auto;
}

.shopCart_list .cell_hd {
  display: flex;
}

.shopCart_list .cell_bd {
  height: 100%;
  display: flex;
}

.shopCart_list .cell_bd .col {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding-left: 20rpx;
}

.shopCart_list .cell_bd .row {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.shopCart_list .cell_ft {
  height: 100%;
  display: flex;
  align-items: flex-end;
}

.shopCart_list .tips {
  text-align: center;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 100rpx auto;
}

.btn_check {
  width: 40rpx;
  height: 40rpx;
  border: 1px solid #d4d4d4;
  position: relative;
  border-radius: 50%;
  margin-right: 20rpx;
}

.btn_check.selected::after {
  content: "";
  display: inline-block;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background-color: #ffb400;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-left: -10rpx;
  margin-top: -10rpx;
}

.acount {
  display: block;
  width: 180rpx;
  position: relative;
  height: 48rpx;
  line-height: 48rpx;
  overflow: hidden;
  float: right;
}

.acount .unit {
  display: block;
  background-color: #fff;
  width: 48rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  font-size: 36rpx;
  color: #999;
  border: 1px solid #999;
  padding: 0;
  z-index: 1;
  margin: 0;
  float: left;
}

.acount .unit.normal {
  color: #999;
}

.acount .unit.disabled {
  color: #dbdbdb !important;
  background-color: #fff !important;
  border-color: #dbdbdb;
}

.acount .unit.minus {
  border-right-color: transparent;
}

.acount .unit.plus {
  border-left-color: transparent;
}

.acount .input-text {
  display: block;
  width: 84rpx;
  height: 48rpx;
  line-height: 48rpx;
  border: 1px solid #999;
  padding: 0;
  margin: 0;
  min-height: auto;
  text-align: center;
  font-size: 26rpx;
  color: #333;
  z-index: 2;
  overflow: hidden;
  float: left;
}

movable-area.slider_delete {
  height: 256rpx;
  width: calc(100vw - 120rpx);
  box-sizing: border-box;
}

movable-area.slider_delete movable-view {
  height: 256rpx;
  width: 100vw;
  background: #fff;
  z-index: 999;
  box-sizing: border-box;
}

.btn_delete {
  position: absolute;
  top: 0;
  bottom: 0;
  right: 0;
  width: 120rpx;
  font-size: 30rpx;
  color: #FFFFFF;
  height: 256rpx;
  z-index: 1;
  background-color: #ffb400;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
}

.shopCart_submit {
  position: fixed;
  bottom: 110rpx;
  left: 0;
  right: 0;
  width: 100%;
  height: 110rpx;
  background-color: #fff;
  z-index: 9999;
  text-align: center;
  display: flex;
  align-items: center;
  font-size: 30rpx;
  color: #666;
  border-top: 1px solid #eee;
}

.shopCart_submit .cell_hd,
.shopCart_submit .cell_bd {
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.shopCart_submit .cell_ft {
  height: 100%;
}

.shopCart_submit .cell_bd {
  justify-content: flex-end;
  padding-left: 0;
}

.shopCart_submit .btn_sumbit {
  display: inline-block;
  width: 255rpx;
  height: 110rpx;
  line-height: 110rpx;
  background-color: #4864ff;
  color: #fff;
  font-size: 30rpx;
  text-align: center;
  border-radius: 0;
}

.shopCart_submit .totalPrice {
  color: #ffb400;
  display: flex;
  font-size: 30rpx;
  min-width: 100rpx;
  justify-content: flex-end;
  align-items: center;
}
